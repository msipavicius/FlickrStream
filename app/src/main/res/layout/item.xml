<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:contentDescription="@string/photo_default_description" />

    <View
        android:id="@+id/imageGradient"
        android:layout_width="match_parent"
        android:layout_height="270px"
        android:layout_alignParentBottom="true"
        android:background="@drawable/photo_gradient_dark" />

    <ImageView
        android:id="@+id/buddyIcon"
        android:layout_height="128px"
        android:layout_width="128px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="36px"
        android:layout_marginRight="36px"
        android:padding="4px"
        android:background="@drawable/buddyicon_border"
        android:contentDescription="@string/buddyicon_default_description" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="48px"
        android:layout_marginLeft="36px"
        android:textColor="@color/white60"/>


</RelativeLayout>